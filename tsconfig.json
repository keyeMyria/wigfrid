{
    "version": "2.1.4",
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "src/",
            "node_modules/@types/",
            "jspm_packages/npm",
            "jspm_packages/github"
        ],
        "removeComments": false,
        "noImplicitAny": false,
        "sourceRoot": "src/",
        "baseUrl": "./src", // This must be specified if "paths" is.
        "paths": {
        },
        "rootDirs": [
            "src/"
        ],
        "outDir": "dist/",
        "compileOnSave": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "compiled/*"
    ]
}
